<div class="submitbox" id="submitpost">
    <div id="minor-publishing">
        <div style="display:none;">
            <p class="submit">
                <input id="save" class="button" type="submit" name="submit" value="{{ save_btn_title }}" />
            </p>
        </div>
        {% if gallery_id %}
        <div style="padding:0 10px">
            <p>
                {{ __('Gallery Shortcode:') }} <code>[gallery id=&quot;{{ gallery_id }}&quot;]</code>
            </p>
        </div>
        {% endif %}
        <div class="misc-pub-section-last" style="padding: 0 10px 10px">
            <p><label for="post_content">{{ __('Short Description') }}:</label></p>
            <textarea id="post_content" name="post_content" class="large-text" rows="3" cols="30" style="width:100%;" tabindex="4">{{ gallery.post_content }}</textarea>
            <div class="clear"></div>
        </div>
    </div>
    <div id="major-publishing-actions">
        {% if show_delete_action %}
        <div id="delete-action">
            <a href="{{ delete_action.url | raw }}" title="{{ delete_action.title }}" class="submitdelete deletion">{{ delete_action.text }}</a>
        </div>
        {% endif %}
        <div id="publishing-action">
            <input name="submit" type="submit" class="button-primary" id="publish" tabindex="5" accesskey="p" value="{{ save_btn_title }}" />
        </div>
        <div class="clear"></div>
    </div>
</div>

